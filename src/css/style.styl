/* reset & general
====================================================================================================*/

$yellow = #ffc501
$lblack = #464646
$formblack = #171717
$forminputblack = #292929
$white = #efefef

@font-face
	font-family 'Proxima Nova'
	src url('../fonts/ProximaNovaRegular.eot')
	src url('../fonts/ProximaNovaRegular.eot') format('embedded-opentype'), url('../fonts/ProximaNovaRegular.ttf') format('truetype'), url('../fonts/ProximaNovaRegular.woff') format('woff'), url('../fonts/ProximaNovaRegular.svg') format('svg')
	font-weight normal
	font-style normal

@font-face
	font-family 'Proxima Nova'
	src url('../fonts/ProximaNovaBold.eot')
	src url('../fonts/ProximaNovaBold.eot') format('embedded-opentype'), url('../fonts/ProximaNovaBold.ttf') format('truetype'), url('../fonts/ProximaNovaBold.woff') format('woff'), url('../fonts/ProximaNovaBold.svg') format('svg')
	font-weight bold
	font-style normal

// на основе популярности разрешений экранов с http://gs.statcounter.com/screen-resolution-stats/all/russian-federation
html
	font-size 16px
	@media (max-width 1279px)
		font-size 15px
	@media (max-width 1023px)
		font-size 14px
	@media (max-width 961px)
		font-size 13px
	@media (max-width 799px)
		font-size 12px
	@media (max-width 767px)
		font-size 11px
	@media (max-width 659px)
		font-size 10px
	@media (max-width 599px)
		font-size 9px
	@media (max-width 549px)
		font-size 8px
	@media (max-width 479px)
		font-size 6px


body
	font-family 'Proxima Nova'
	font-weight 400
	min-width 320px
	overflow-x hidden

a
	text-decoration none
	//&:active,
	//&:hover,
	//&:focus
	//	outline 0

button:active, button:focus
	outline none !important

button::-moz-focus-inner
	border 0 !important

:active
	outline none
:hover
	outline none
:focus
	outline none

p
	margin 0 0 10px

.container
	position relative
	display flex
	flex-direction column
	justify-content center
	max-width 1280px
	flex-basis 1280px
	margin 0 auto
	padding 0 10px
	box-sizing border-box

h2
	position relative
	margin 3rem 0 0
	font-size 3rem
	font-weight bold
	letter-spacing 2px
	text-transform uppercase
	text-align center
	@media (max-width 767px)
		margin 3rem 0 0
	@media (max-width 479px)
		font-size 22px
	&:before
		position absolute
		display block
		content ''
		width 4px
		height 2.5rem
		top -3.75rem
		left calc(50% - 2px)
		background-color $yellow
		@media (max-width 767px)
			display none

.items
	display flex
	flex-wrap wrap
	justify-content space-between

.btn
	position relative
	margin 0 auto 10px
	padding 0
	border 0
	display inline-block
	background-color black
	text-align center
	vertical-align middle
	font-size 1rem
	font-weight bold
	text-transform uppercase
	color white
	cursor pointer
	touch-action manipulation
	user-select none
	-moz-user-select none
	&_span
		position relative
		display inherit
		padding 1.25rem 1.875rem
		letter-spacing 2px
		background-color $yellow
		transition all 0.225s ease
		@media (max-width 799px)
			padding 15px 20px
			font-size 12px
	&:before
		position absolute
		display block
		content ''
		width 98%
		height 102%
		left 4px
		border 2px solid $yellow
		box-sizing border-box
		transform rotate(-2deg)
		transition all 0.225s ease
	&:hover
		&:before
			transform rotate(-4deg)
		.btn_span
			color $yellow
			background-color black
	&:active
		&:before
			background-color $yellow

.btn__more
	margin-top 3.125rem
	.btn_span__more
		padding 0.625rem 3.125rem
		letter-spacing 1px

/* Home
====================================================================================================*/

