body
	font-family: 'Proxima Nova'
	font-weight: 400
	font-size: 14px
	line-height: 1.42857143

a
	text-decoration none
	&:active,
	&:hover
		outline: 0

.container
	width: 1140px
	margin: 0 auto
	padding: 0 15px

$yellow = #ffc501

.yellow
	color $yellow

