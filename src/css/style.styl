					display none
		&_item
			position relative
			padding 20px 5px
			display block
			font-size 16px
			text-transform uppercase
			text-decoration none
			color black
			transition all 0.225s ease
			&:after
				position absolute
				top 21px
				right -21px
				width 1px
				height 16px
				display block
				content ''
				background-color white
				transition all 0.225s ease
			&:hover
				&:after
					top 26px
					right -24px
					height 6px
					width 6px
					background-color black
	.home
		&_h1
			margin 150px 0 0
			font-size 3.5em
			font-weight bold
			color $yellow
			text-transform uppercase
		&_subtitle
			position relative
			margin-bottom 65px
			display block
			font-size 45px
			font-weight bold
			color white
			text-transform none
			&:after
				position absolute
				left 50%
				margin-left -33px
				bottom -33px
				width 66px
				height 3px
				display block
				content ''
				background-color $yellow
		&_ruble
			font-weight normal
		&_text
			margin-bottom 70px
			font-size 35px
			color white
			&__yellow
				color $yellow
	.advantages
		margin-top 150px
		background-color rgba(0, 0, 0, 0.5)
		&_slider
			width 95%
			margin 0 auto
			.slick-arrow
				position absolute
				width 30px
				height 35px
				border 1px solid white
				background-color black
				background-size 13px 23px
				background-position center
				background-repeat no-repeat
				transition all 0.225s ease
				&:hover
					border-color $yellow
				&:before
					display none
			.slick-prev
