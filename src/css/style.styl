			top: -70px
			width 327px
			height 866px
			left 229px
			background-image url(../img/header/lamp2.png)
		&_lamp3
			position absolute
			width 278px
			height 476px
			left 355px
			background-image url(../img/header/lamp3.png)
		&_lamp4
			position absolute
			width 93px
			height 403px
			right 472px
			background-image url(../img/header/lamp4.png)
		&_lamp5
			position absolute
			width 286px
			height 798px
			right 335px
			background-image url(../img/header/lamp5.png)
		&_lamp6
			position absolute
			width 317px
			height 692px
			right 138px
			background-image url(../img/header/lamp6.png)
			animation lamp6Move 14s ease infinite
	.topbar
		padding 1.5rem 0
		background-color rgba(0, 0, 0, 0.5)
		.container
			display flex
			flex-direction row
			flex-wrap wrap
			justify-content space-between
			@media (max-width 459px)
				justify-content center
	.brand
		width 200px
		height 55px
		margin 0 10px
		padding-top 7px
		box-sizing border-box
		@media (max-width 459px)
			margin-bottom 5px
		&_url
			display: block
		&_logo
			display block
			height: 25px
			background url(../img/header/logo.png) no-repeat
			background-size contain
		&_slogan
			font-size 14.9px
			line-height: 23px
			color white
	.tel
		width 200px
		height 55px
		margin 0 10px
		cursor pointer
		&_url
			display block
			font-size 24px
			font-weight bold
			&:hover
				.tel_icon
					transform rotate(-20deg)
		&_icon
			position relative
			top 5px
			right 4px
			color: $yellow
			transition all 0.225s ease
		&_number
			color white
		&_subtitle
			position relative
			display inline-block
			height 25px
			font-size 16.1px
			line-height 21px
			color $yellow
			transition all 0.225s ease
			&:after
				position absolute
				display block
				content ''
				width calc(100% - 2px)
				height 1px
				left 1px
				bottom 2px
				background-color $yellow
				transition all 0.225s ease
			&:hover
				&:after
					width 0
	.nav
		background-color $yellow
		&_ul
			width 100%
			margin 0
			padding 0
			display flex
			flex-wrap wrap
			justify-content space-between
			list-style none
			@media (max-width 899px)
				flex-direction column
				align-items center
			&-wrap
				@media (max-width 899px)
					display none
					border-top 1px solid black
				@media (min-width 900px)
					display block !important
		&_li
			@media (max-width 899px)
				width 180px
			@media (max-width 1279px)
				&:hover
					background-color lighten($yellow, 40%)
			&:last-child > a:after
				display none
		&_item
			position relative
			padding 1.25rem 0.6rem
			display block
			font-size 1rem
			text-transform uppercase
			text-decoration none
			color black
			@media (max-width 899px)
				padding 7px 5px
				font-size 15px
			&:after
				position absolute
				top 21px
				right -21px
				width 1px
				height 16px
				display block
				content ''
				background-color white
				transition all 0.225s ease
				@media (max-width 1279px)
					display none
			&:hover
				&:after
					top 26px
					right -24px
					height 6px
					width 6px
					background-color black
		.burger-wrap
			display flex
			justify-content end
		&-burger
			position relative
			display block
			margin 5px 10px
			padding 15px 9px
			border 1px solid black
			border-radius 4px
			cursor pointer
			background-color $yellow
			transition-property opacity, filter
			transition-duration 0.15s
			transition-timing-function linear
			@media (min-width 900px)
				display none
			&:after
				position absolute
				display block
				content ''
				top 0
				left 0
				right 0
				bottom 0
				cursor pointer
			&:hover
				background-color lighten($yellow, 40%)
			&_inner
				position relative
				display block
				width 25px
				height 3px
				top calc(50% - 2px)
				border-radius 4px
				background-color #000
				transition-property transform
				transition-duration 0.075s
				transition-timing-function cubic-bezier(0.55, 0.055, 0.675, 0.19)
				&:before,
				&:after
					position absolute
					display block
					content ""
					width 25px
					height 3px
					border-radius 4px
					background-color #000
					transition-property transform
					transition-duration 0.15s
					transition-timing-function ease
				&:before
					top -8px
					transition top 0.075s 0.12s ease, opacity 0.075s ease
				&:after
					bottom -8px
					transition bottom 0.075s 0.12s ease, transform 0.075s cubic-bezier(0.55, 0.055, 0.675, 0.19)
			&__active
				.nav-burger_inner
					transform rotate(45deg)
					transition-delay 0.12s
					transition-timing-function cubic-bezier(0.215, 0.61, 0.355, 1)
					&:before
						top 0
						opacity 0
						transition top 0.075s ease, opacity 0.075s 0.12s ease
					&:after
						bottom 0
						transform rotate(-90deg)
						transition bottom 0.075s ease, transform 0.075s 0.12s cubic-bezier(0.215, 0.61, 0.355, 1)
	.home
		&_h1
			margin 8rem 0 0
			font-size 3.5rem
			font-weight bold
			color $yellow
			text-transform uppercase
			@media (max-width 361px)
				font-size 3rem
		&_subtitle
			position relative
			margin-bottom 4rem
			display block
			font-size 2.8rem
			font-weight bold
			color white
			text-transform none
			@media (max-width 345px)
				font-size 2.5rem
			&:after
				position absolute
				left 50%
				margin-left -33px
				bottom -2rem
				width 66px
				height 3px
				display block
				content ''
				background-color $yellow
		&_ruble
			font-weight normal
		&_text
			margin-bottom 4rem
			font-size 2.5rem
			color white
			&__yellow
				color $yellow
	.advantages
		margin-top 6rem
		background-color rgba(0, 0, 0, 0.5)
		&_slider
			width 95%
			margin 0 auto
			.slick-arrow
				position absolute
				width 30px
				height 35px
				border 1px solid white
				background-color black
				background-size 13px 23px
				background-position center
				background-repeat no-repeat
				transition all 0.225s ease
				&:hover
					border-color $yellow
				&:before
					display none
			.slick-prev
				background-image url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M0%2C22L22%2C0l2.1%2C2.1L4.2%2C22l19.9%2C19.9L22%2C44L0%2C22L0%2C22L0%2C22z'%20fill%3D'%23ffffff'%2F%3E%3C%2Fsvg%3E")
				left -1.875rem
				right auto
			.slick-next
				background-image url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M27%2C22L27%2C22L5%2C44l-2.1-2.1L22.8%2C22L2.9%2C2.1L5%2C0L27%2C22L27%2C22z'%20fill%3D'%23ffffff'%2F%3E%3C%2Fsvg%3E")
				right -1.875rem
				left auto

.advantage
	padding 1rem 10px 1rem 0
	color white
	outline 0
	cursor default
	@media (max-width 1279px)
		padding 1rem 10px
	@media (max-width 939px)
		padding 0 30px 1rem 30px
	@media (max-width 664px)
		padding 0 40px 1rem 40px
	.items
		justify-content center
		flex-wrap nowrap
		@media (max-width 939px)
			flex-wrap wrap
	&_icon
		width 70px
		height 100px
		margin 0 5px
		flex-shrink 0
		background-position center
		background-repeat no-repeat
		transition all 0.225s ease
		filter grayscale(100%) brightness(130%)
		@media (max-width 939px)
			width 100%
			height 70px
			margin-bottom 5px
		&__1
			background-image url("../img/icons/1.png")
		&__2
			background-image url("../img/icons/2.png")
		&__3
			background-image url("../img/icons/3.png")
		&__4
			background-image url("../img/icons/4.png")
		&__5
			background-image url("../img/icons/5.png")
		&__6
			background-image url("../img/icons/6.png")
		&__7
			background-image url("../img/icons/7.png")
		&__8
			background-image url("../img/icons/8.png")
	&_text
		text-align left
		@media (max-width 939px)
			text-align center
	&_header
		margin 0 0 12px
		font-size 16px
		font-weight bold
		text-transform uppercase
		transition all 0.225s ease
		@media (max-width 434px)
			font-size 14px
	&:hover
		.advantage_icon
			filter grayscale(0%) brightness(100%)
		.advantage_header
			color $yellow
	&_desc
		margin: 0
		padding-right 10px
		font-size 13px
		@media (max-width 939px)
			padding 0
		@media (max-width 434px)
			font-size 12px

@keyframes lamp6Move
	0%
		transform rotate(14deg) translateX(-120px)
	50%
		transform rotate(-14deg) translateX(120px)
	100%
		transform rotate(14deg) translateX(-120px)


/* Offer1
====================================================================================================*/

.offer
	padding 3.125rem 0
	.items
		justify-content center
		z-index 1
	&-left
		flex-basis 580px
		padding 4rem 5.625rem
		border 4px solid $yellow
		box-sizing border-box
		z-index -1
		align-self center
		@media (max-width 1119px)
			flex-basis 750px
			padding 2rem 5.625rem
		@media (max-width 767px)
			padding 20px
		@media (max-width 659px)
			padding 10px 20px
		&_header
			position relative
			margin 0 0 1.875rem
			font-size 1.75rem
			font-weight bold
			text-align left
			@media (max-width 767px)
				margin 0
				font-size 16px
				text-align center
			&:before
				position absolute
				display block
				content ''
				width 50px
				height 1px
				top 6px
				left -65px
				background-color black
				@media (max-width 961px)
					display none
		&_text
			position relative
			padding-left 70px
			font-size 1rem
			@media (max-width 961px)
				font-size 14px
			@media (max-width 767px)
				display none
			&:before
				position absolute
				display block
				content ''
				width 45px
				height 4px
				top 7px
				left 0
				background-color $yellow
	&-right
		position relative
		padding 45px 70px
		box-sizing border-box
		background-color $formblack
		@media (max-width 1119px)
			flex-basis 750px
			padding 3rem 15px
		&_lamp
			position absolute
			display inline-block
			content ''
			width 225px
			height 410px
			top 21px
			left -100px
			z-index -1
			background url(../img/header/offer-lamp.png) center no-repeat
			background-size contain
			transition all 0.225s ease
			@media (max-width 1084px)
				display none
			&:hover
				transform rotate(-8deg) translateX(-50px)

.form
	display flex
	flex-direction column
	align-items center
	max-width 500px
	margin 0 auto
	text-align center
	background-color $formblack
	&-item
		position relative
		width 100%
		margin-bottom 20px
		&_input
			width 100%
			height 50px
			padding 0 40px 0 10px
			border 1px solid white
			box-sizing border-box
			font-size 16px
			color white
			background-color $forminputblack
			transition all 0.225s ease
			cursor pointer
			&::-webkit-input-placeholder
				color white
				opacity 0.9
				@media (max-width 415px)
					font-size 14px
			&::-moz-placeholder
				color white
				opacity 0.9
				@media (max-width 415px)
					font-size 14px
			&:-moz-placeholder
				color white
				opacity 0.9
				@media (max-width 415px)
					font-size 14px
			&:-ms-input-placeholder
				color white
				opacity 0.9
				@media (max-width 415px)
					font-size 14px
			&:focus,
			&:active
				border-color $yellow
				+.form-item_icon
					color $yellow
			&__select
				margin 0
				-moz-appearance none
				-webkit-appearance none
				color rgba(0,0,0,0)
				text-shadow 0 0 0 #fff
		&__select
			position relative
			width 170px
			@media (max-width 1119px)
				width 45%
				min-width 170px
			@media (max-width 479px)
				width 100%
			&:after
				position absolute
				display block
				content ''
				width 0
				height 0
				top 23px
				right 16px
				border-width 5px 4px 0 4px
				border-style solid
				border-color rgba(255,255,255,0.9) transparent transparent transparent
		&_icon
			position absolute
			top 12px
			right 10px
			color white
			pointer-events none
			transition all 0.225s ease
	&_text
		display block
		margin-bottom 20px
		font-size 16px
		text-align left
		color white
	.items
		justify-content space-between
		width 100%
	&-agree
		position relative
		display block
		margin 0 0 30px 8px
		font-size 16px
		font-weight 400
		text-align center
		color white
		user-select none
		-moz-user-select none
		&_checkbox
			position relative
			top 2px
			right 8px
		&_underline
			text-decoration underline
			cursor help
			&:hover+.form-agree_tooltip
				opacity 1
				pointer-events auto
		&_tooltip
			position absolute
			opacity 0
			left 0
			right 0
			bottom 27px
			padding 10px
			border-radius 6px
			font-size 12px
			line-height 1.2
			text-align justify
			color black
			background white
			pointer-events none
			transition all 0.225s ease
			&:before
				display block
				content ''
				position absolute
				border 6px solid transparent
				border-top-color white
				bottom -12px
				right 50px



/* Hits
====================================================================================================*/

.hits
	display flex
	padding 3.125rem 0
	box-sizing border-box
	background url(../img/hits/bg.jpg) top center no-repeat
	background-size cover
	text-align center
	&-bg_lamp
		position absolute
		width 537px
		height 692px
		right -515px
		bottom -70px
		background-image url(../img/hits/lamp.png)
		@media (max-width 1650px)
			display none
	&_header
		margin 15px 0
		font-weight bold
		text-transform uppercase
	.filter
		margin 4.75rem 0 0 20px
		padding 0 17.5px
		text-align left
		@media (max-width 1189px)
			text-align center
			margin-left 0
		&_label
			font-size 18px
			line-height 30px
		&-item
			position relative
			display inline-block
			cursor pointer
			&_input
				display inline-block
				height 30px
				padding 0 25px 0 5px
				border 2px solid $yellow
				font-size 16px
				color rgba(0,0,0,0)
				text-shadow 0 0 0 #444
				background-color #f3f3f3
				-moz-appearance none
				-webkit-appearance none
				transition all 0.225s ease
				cursor pointer
				@media (max-width 450px)
					font-size 14px
			&:after
				position absolute
				display block
				content ''
				width 0
				height 0
				top 13px
				right 12px
				border-width 5px 4px 0 4px
				border-style solid
				border-color rgba(0,0,0,0.9) transparent transparent transparent
	&_incandescent,
	&_halogen
		padding 20px 10px 0
		justify-content space-between
		@media (max-width 1189px)
			justify-content center
	&-item
		position relative
		min-width 210px
		margin 10px
		text-align center
		background-color white
		@media (max-width 1189px)
			&:last-child
				display none
		@media (max-width 959px)
			width 33%
		@media (max-width 499px)
			width 260px
		&:before
			position absolute
			display block
			content ''
			top 5px
			left 5px
			right 5px
			bottom 5px
			opacity 0
			border 2px solid $yellow
			transition all 0.225s ease
		&:hover:before
			opacity 1
		&:hover
			.hits-item_img
				transform translateY(-10px)
		&_img
			width 79px
			height 157px
			margin 25px auto 0
			transition all 0.225s ease
			&__1
