		&__3
			background-image url("../img/icons/3.png")
		&__4
			background-image url("../img/icons/4.png")
		&__5
			background-image url("../img/icons/5.png")
		&__6
			background-image url("../img/icons/6.png")
		&__7
			background-image url("../img/icons/7.png")
		&__8
			background-image url("../img/icons/8.png")
	&_text
		text-align left
	&_header
		margin 0 0 12px
		font-size 18px
		font-weight bold
		text-transform uppercase
		transition all 0.225s ease
	&:hover
		.advantage_icon
			filter grayscale(0%) brightness(100%)
		.advantage_header
			color $yellow
	&_desc
		margin: 0
		padding-right 5px
		font-size 13px



@keyframes lamp6Move
	0%
		transform rotate(14deg) translateX(-120px)
	50%
		transform rotate(-14deg) translateX(120px)
	100%
		transform rotate(14deg) translateX(-120px)

/* Offer1
====================================================================================================*/

.offer
	padding 50px 0
	.items
		justify-content center
	&-left
		width 580px
		padding 65px 90px
		border 4px solid $yellow
		box-sizing border-box
		align-self center
		&_header
			position relative
			margin 0 0 30px
			font-size 28px
			font-weight bold
			text-align left
			&:before
				position absolute
				display block
				content ''
				width 50px
				height 1px
				top 6px
				left -65px
				background-color black
		&_text
			position relative
			padding-left 70px
			font-size 15px
			&:before
				position absolute
				display block
				content ''
				width 45px
				height 4px
				top 7px
				left 0
				background-color $yellow
	&-right
		position relative
		z-index 0
		&_lamp
			position absolute
			width 225px
			height 410px
			top 21px
			left -100px
			z-index -1
			background url(../img/header/offer-lamp.png) center no-repeat
			background-size contain
			transition all 0.225s ease
			&:hover
				transform rotate(-8deg) translateX(-50px)


.form
	padding 45px 70px
	text-align center
	background-color $formblack
	&-item
		position relative
		margin-bottom 20px
		&_input
			width 100%
			height 50px
			padding 0 40px 0 10px
			border 1px solid white
			box-sizing border-box
			font-size 16px
			color white
			background-color $forminputblack
			transition all 0.225s ease
			cursor pointer
			&::-webkit-input-placeholder
				color white
				opacity 0.9
			&::-moz-placeholder
				color white
				opacity 0.9
			&:-moz-placeholder
				color white
				opacity 0.9
			&:-ms-input-placeholder
				color white
				opacity 0.9
			&:focus,
			&:active
				border-color $yellow
				+.form-item_icon
					color $yellow
			&__select
				width 180px
				margin 0
				-moz-appearance none
				-webkit-appearance none
				color rgba(0,0,0,0)
				text-shadow 0 0 0 #fff
		&__select
			position relative
			&:after
				position absolute
				display block
				content ''
				width 0
				height 0
				top 23px
				right 16px
				border-width 5px 4px 0 4px
				border-style solid
				border-color rgba(255,255,255,0.9) transparent transparent transparent
		&_icon
			position absolute
			top 12px
			right 10px
			color white
			pointer-events none
			transition all 0.225s ease
	&_text
		display block
		margin-bottom 20px
		font-size 16px
		text-align left
		color white
	.items
		justify-content space-between
	&-agree
		position relative
		display block
		margin 10px 0 30px
		font-weight 400
		text-align center
		color white
		user-select none
		-moz-user-select none
		&_checkbox
			position relative
			top 2px
			right 8px
		&_underline
			text-decoration underline
			cursor help
			&:hover+.form-agree_tooltip
				opacity 1
				pointer-events auto
		&_tooltip
			position absolute
			opacity 0
			left 0
			right 0
			bottom 27px
			padding 10px
			border-radius 6px
			font-size 12px
			line-height 1.2
			text-align justify
			color black
			background white
			pointer-events none
			transition all 0.225s ease
			&:before
				display block
				content ''
				position absolute
				border 6px solid transparent
				border-top-color white
				bottom -12px
				right 50px



