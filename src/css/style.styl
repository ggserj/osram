.filter
	margin 70px 0 0 20px
	font-size 18px
	text-align left
	&-item
		position relative
		display inline-block
		cursor pointer
		&_input
			display inline-block
			height 30px
			padding 0 25px 0 5px
			border 2px solid $yellow
			font-size 16px
			color rgba(0,0,0,0)
			text-shadow 0 0 0 #444
			background-color #f3f3f3
			-moz-appearance none
			-webkit-appearance none
			transition all 0.225s ease
			cursor pointer
		&:after
			position absolute
			display block
			content ''
			width 0
			height 0
			top 13px
			right 12px
			border-width 5px 4px 0 4px
			border-style solid
			border-color rgba(0,0,0,0.9) transparent transparent transparent




/* calculator
====================================================================================================*/

.calculator
	padding 50px 0
	background url(../img/bg-calculator.jpg) top center
	background-size cover
	text-align center
	.items
		justify-content space-around
	&_header
		margin-bottom 60px
		color white
	&-item
		&_header
			position relative
			margin 40px 0
			padding 40px 0
			z-index 1
			font-size 32px
			font-weight bold
			text-transform uppercase
			text-align center
			color white
			&:before
				position absolute
				display block
				content ''
				width 60px
				height 100px
				top calc(50% - 50px)
				left calc(50% - 30px)
				z-index -1
				border 4px solid $yellow
				box-sizing border-box
				transition all 0.225s ease
			&:hover
				&:before
					transform rotate(45deg)
					width 100px
					margin-left -20px
		&_lamp
			position relative
			width 380px
			height 360px
			margin 60px auto 25px
			border 4px solid #aaa
			background-color black
			background-position center
			background-repeat no-repeat
			transition all 0.225s ease
			&:after
				display block
				content ''
				position absolute
				left 0
				right 0
				top 0
				bottom 0
				background-repeat no-repeat
				background-position center
				transition all 0.225s ease
			&__simple
				background-image url(../img/calculator/lamp1.png)
				&:after
					opacity 0
					background-image url(../img/calculator/lamp1-on.png)
					background-position 93px 33px
			&__osram
				background-image url(../img/calculator/lamp2.png)
				&:after
					opacity 0
					background-image url(../img/calculator/lamp2-on.png)
					background-position 26px -33px
			&:hover
				&:after
					opacity 1
		&_text
			position relative
			font-size 20px
			color $yellow
			&:after
				position absolute
				display block
				content ''
				width 50px
				height 2px
				left calc(50% - 25px)
				bottom -8px
				background-color $yellow
		&_cost
			margin 25px 0 20px
			font-size 24px
			color white
		&_value
			display inline-block
			min-width 80px
			text-align right
		&_visual
			position relative
			height 2px
			margin 0 auto
			background-color #383838
			&:before,
			&:after
				position absolute
				display block
				content ''
				width 10px
				height 10px
				top calc(50% - 5px)
				background-color #aaa
			&:before
				left 0
			&:after
				right 0
	&-flex
		display flex
		justify-content space-around
		padding 70px 0
		&_item
			display flex
			justify-content center
			align-content center
			flex-basis 420px
	&_btn
		height 55px
		.btn_span
			width 250px
			padding 13px 0
			font-size 24px
		&__disabled
			opacity 0.5
			pointer-events none
			cursor default
	&_units
		display inline-block
		font-size 20px
		line-height 55px
		color white
	&-switch
		position relative
		display inline-block
		width 60px
		height 36px
		margin 9.5px 5px
		&_checkbox
			display none
			&:checked + .calculator-switch_slider:after
				transform translateX(26px)
		&__disabled
			opacity 0.5
			pointer-events none
			cursor default
		&_slider
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			border 2px solid $yellow
			border-radius 35px
			transition .4s
			cursor pointer
			&:after
				position absolute
				content ''
				width 26px
				height 26px
				left 2px
				bottom 3px
				border-radius 50%
				background-color $yellow
				transition .225s
	&-timeline
		display flex
		&__disabled
			pointer-events none
			cursor default
		&_part
			position relative
			width 20%
			height 3px
			background-color $yellow
			transition all 0.225s ease
			cursor pointer
			&:before
				position absolute
				display block
				content ''
				width 10px
				height 10px
				background-color $yellow
				right 0
				top calc(50% - 5px)
				transition all 0.225s ease
			&:after
				position absolute
				display block
				right -1px
				bottom -35px
				font-size 18px
				font-weight bold
				color #aaa
				transition all 0.225s ease
			&:nth-child(1):after
				content '0'
			&:nth-child(2):after
				content '1'
			&:nth-child(3):after
				content '2'
			&:nth-child(4):after
				content '3'
			&:nth-child(5):after
				content '4'
			&:nth-child(6):after
				content '5'
			&:first-child
				width 0
			&__active
				background-color white
				&:before
					background-color white
				&:after
					color white
	&-total
		margin-top 80px
